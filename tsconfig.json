{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib",
    "module": "esnext",
    "jsx": "react",
    "lib": ["dom"],
    "types": ["node"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "./rollup.config.ts",
    "./src/**/*",
    "./demo/**/*"
  ]
}
