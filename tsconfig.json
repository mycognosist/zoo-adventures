{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./lib"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "./rollup.config.ts",
    "./src/**/*",
    "./demo/**/*"
  ]
}
